{
    "env": {
        "browser": true
    },
    "parser": "@babel/eslint-parser",
    "plugins": [
        "@babel"
    ],
    "parserOptions": { 
        "requireConfigFile": false,
        "ecmaVersion": "latest",
        "sourceType": "module" 
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
